@model List<BRApplication.Models.MarketPostModel>

<div class="PostContainer">
    <div class="NewPost">
        <div class="PostHeader">
            <img src="@Url.Content("~/Content/Images/BookStack.png")" alt="BookStack"/>&nbsp
            Add Your Posting
        </div>
        <div class="SearchBook">
            @Html.TextBox("txtSearchBook")
            <input id="SearchButton" type="button" value="Search" />
        </div>
        <article>
            <ul class="SearchResults wave">
                @for (int i=0; i < @Model.Count; i++) { 
                    <li>
                        <div class="item">
                            <span class="Block">@Model[i].Course</span>
                            <span class="Block Truncate One-line">@Model[i].Title</span>
                        </div>
                    </li>
                }
            </ul>
            <a class="link">Cannot find your book? Click Here</a>
        </article>
        <div class="NewBook">
            @Html.TextBox("txtAddTitle")
        </div>
    </div>
</div>

@* Must come after definition of the 'ul' element that we are binding to*@
<script type="text/javascript">
    stroll.bind('.NewPost ul');

    $("li").click(function () {
        $(this).siblings(".selected").removeClass("selected");
        $(this).addClass("selected");
    });
</script>

