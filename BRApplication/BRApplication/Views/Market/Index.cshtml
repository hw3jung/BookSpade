@model List<BRApplication.Models.MarketPostModel> 

<style type="text/css">
    .MarketContainer {
        margin-left:auto;
        margin-right:auto;
        text-align:center;
        width:100%;
        height: 100%;
        border: 0px solid red; 
    }
    .MarketPost {
        width:100%;
        float:left;
        text-align:left;
        clear:none; 
        background: #FFEFAD;
        border:0px solid green;
        border-bottom:1px solid #FFF; 
    }

     .MarketPost > .MarketBuyPrice {
            background-repeat:no-repeat; 
            width: 68px;
            height: 74px; 
            text-align: center; 
            margin-top: auto;
            line-height: 74px; 
            font-weight: bold;
            font-family: calibri; 
            float:left;
            border:0px solid yellow;
            background:#DB5400;
            color:#000;
        }

        .MarketPost:hover {
            background:#F7FF9E;
        }

    .MarketPost > a {
        text-decoration: none;
        font-weight: bold;
        font-family: calibri;
        font-size: 14px;
        color: #633200; 
    }

    .MarketPost > a:hover {
        cursor: pointer; 
        color: #DB5400; 
    }

    .MarketPostDetail {
        text-align:left;
        font-size:9px;
        padding-left: 10px;
        border: 0px solid yellow; 
        border-top: 0px solid #572303; 
    }
     .MarketPostDetail ul {
        width:100%;
         
    }

    .MarketPostDetail ul li {
        display:inline;
        list-style-type:none;
        padding-left: 5px; 
    }

    .marketLabel {
        font-weight:bold;
    }
    .marketValue {
        
    }
</style>

<div class="PostContainer">
    <div class="NewPost">
    <article>
        <ul class="SearchResults wave">
            @{
                foreach (var m in Model) {
                       if (m.IsBuy) {
                           <li>
                                 @Html.Partial("SellPost_Partial", m)
                           </li>
                        } else {
                           <li>
                                 @Html.Partial("BuyPost_Partial", m) 
                           </li>
                       }
                }
            }
        </ul>
    </article>
        </div>
</div>
<script type="text/javascript">
    stroll.bind('.NewPost ul');
</script>