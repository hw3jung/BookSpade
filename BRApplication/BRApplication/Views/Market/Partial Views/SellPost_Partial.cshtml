@model BRApplication.Models.MarketPost

<div id="mdlEmail@(Model.PostID)" title="Contact Email Address" class="none mdlEmail">
    Please enter an email the owner of this book can contact you with. <br/><br/>
     @Html.TextBox("txtRespondantEmail", "", new { @class = "txtRespondantEmail" })
    <input id="btnSave" class="btn-save" type="button" value="Submit" />
</div>
<div id="mdlFacebook@(Model.PostID)" class="none">
    Please contact @Model.PostedBy through their facebook profile: <br />
    <div id="fblink@(Model.PostID)" class="fbLink">&nbsp;</div>
</div>
<div id="mdlSuccess@(Model.PostID)" title="Success!"  class="none">
    Success! The poster has been notified and will contact you soon.
</div>
<div id="mdlFailedToMail@(Model.PostID)" title="Oops!" class="none">
    The poster could not be contact with the given email address, please try again. 
</div>

@*individual market post*@
    <div class="marketpostWrapper shadow roundBorder-bottomRight">

        <div class="leftmarketpostWrapper">

            @* book image *@
            <div class="bookimageWrapper">
                <div class="squareFill"></div>

                <div class="BookImage">
                    <img src="@Url.Content("~/Content/Images/StaticImage.jpg")" alt="Book Image"  />
                </div>

                @* book price *@
				<div class="bookpriceWrapper">
                    <div class="MarketBuyPrice">
                        $@Model.Price       
                    </div>
                </div>
            </div>

            @* links below book image *@
            <div class="marketpostQuicklinks">
                <div class="marketBtn">
                    <a href="@(Url.Action("LoadDetailPost", "Posting", new { postID = Model.PostID }))">More Details</a>
                </div>       

                <div  class="marketBtn">
                    <input class="btn-buy" id="btnBuyNow" type="button" postID="@(Model.PostID)" value="Buy Now" />
                </div>
            </div>
        </div>

        <div class="rightmarketpostWrapper roundBorder-bottomRight">
            <div class="MarketPostDetail">
                <a href="@(Url.Action("LoadDetailPost", "Posting", new { postID = Model.PostID }))">@Model.Title</a>

                <div>
                    <span class="marketLabel">Author: </span><span class="marketValue">@Model.Author</span>
                    <span class="marketLabel">Course: </span><span class="marketValue">@Model.Course</span>
                    <span class="marketLabel">Condition: </span><span class="marketValue">@Model.Condition</span>
                    <span class="marketLabel">ISBN: </span><span class="marketValue">@Model.ISBN </span>
                    <span class="marketValue datePosted">@Model.datePosted</span>
                    </div>
            </div>
        </div>
    </div>




<div class="none" id="PostedBy@(Model.PostID)">@Model.PostedBy</div>
<div class="none" id="bookTitle@(Model.PostID)">@Model.Title</div>
<div class="none" id="profileID@(Model.PostID)">@Model.profileID</div>
<div class="none" id="email@(Model.PostID)">@Model.viaEmail</div>

