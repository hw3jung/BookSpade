        <script type="text/ecmascript">
            $(function () {
                $(document).on('click', '.reportbug', function () {
                    var LoginStatus = $("#LoginStatus").text();
                    if (LoginStatus == "True") {
                        ReportBugDialog();
                    }
                    else {
                        LoginRequestDialog();
                    }
                });
            });

            function ReportBugDialog() {
                $("#reportBug").dialog({
                    height: 550,
                    width: 800,
                    modal: true,
                    buttons: [{
                        text: "Cancel",
                        "class": 'EmailCancel',
                        click: function () {
                            $(this).dialog("close");
                        }
                    }]
                });
            }

            function LoginRequestDialog() {
                $("#mdlLoginRequest").dialog({
                    height: 200,
                    width: 500,
                    modal: true
                });
            }

            $(document).on('click', '.btn-submit', function () {

                var bugmsg = $(this).siblings('.bugmsg').val();

                $.ajax({
                    url: '@Url.Action("ReportABug", "Home")',
                        data: {
                            BugMsg: bugmsg
                        },
                        type: 'POST',
                        success: function (result) {
                            if (result) {
                                SuccessDialog(this);
                            } else {
                                FailDialog(this);
                            }
                        }
                    });
                });

                    function SuccessDialog(dialog) {
                        $("#reportSuccess").dialog({
                            height: 300,
                            width: 500,
                            modal: true,
                            buttons: {
                                "OK": function () {
                                    $(".ui-dialog-content").dialog("close");
                                }
                            }
                        });
                    }

                    function FailDialog() {
                        $("#reportFail").dialog({
                            height: 300,
                            width: 500,
                            modal: true,
                            buttons: {
                                "OK": function () {
                                    $(".ui-dialog-content").dialog("close");
                                }
                            }
                        });
                    }
            </script>
